<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lsq_color_white"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/lsq_unlock_state_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@mipmap/lsq_face_unlock_success"
        android:layout_marginTop="@dimen/lsq_dimen_150"/>

    <TextView
        android:id="@+id/lsq_unlock_state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lsq_face_unlock_success"
        android:textSize="@dimen/lsq_dimen_15"
        android:textColor="@color/lsq_color_black"
        android:layout_marginTop="@dimen/lsq_dimen_15"
        />

    <TextView
        android:id="@+id/lsq_face_unlock_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/lsq_dimen_15"
        android:textColor="@color/lsq_color_black"
        android:layout_marginTop="@dimen/lsq_dimen_15"
        />

    <Button
        android:id="@+id/lsq_face_unlock_confirm_btn"
        style="@style/lsq_button_setting"
        android:text="@string/lsq_face_unlock_confirm"
        android:layout_marginTop="@dimen/lsq_dimen_15"
        android:background="@color/lsq_color_purple"/>


</LinearLayout>